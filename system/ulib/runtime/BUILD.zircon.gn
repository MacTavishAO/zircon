zx_library("runtime") {
  sources = [ "thread.c" ]
  sdk = "source"
  sdk_headers = [
    "runtime/thread.h",
    "runtime/tls.h",
  ]

  deps = [
    "$zx/system/ulib/elf-psabi",
    "$zx/system/ulib/zircon",
  ]

  configs += [
    # This code is used in early startup, where safe-stack is not ready yet.
    "$zx_build/public/gn/config:no_sanitizers",
  ]
}
