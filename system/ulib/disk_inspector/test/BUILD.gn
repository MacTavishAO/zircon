assert(!defined(zx) || zx != "/",
       "This file can only be used in the Fuchsia GN build.")

import("//build/test.gni")

group("test") {
  testonly = true
  deps = [ ":disk_inspector_unit" ]
}

test("disk_inspector_unit") {
  # Dependent manifests unfortunately cannot be marked as `testonly`.
  # TODO(44278): Remove when converting this file to proper GN build idioms.
  if (is_fuchsia) {
    testonly = false
  }
  if (is_fuchsia) {
    configs += [ "//build/unification/config:zircon-migrated" ]
  }
  if (is_fuchsia) {
    fdio_config = [ "//build/config/fuchsia:fdio_config" ]
    if (configs + fdio_config - fdio_config != configs) {
      configs -= fdio_config
    }
  }
  output_name = "disk-inspector-unit-test"
  sources = [
    "basic_types_test.cc",
    "command_test.cc",
    "disk_primitive_test.cc",
    "disk_struct_test.cc",
    "inspector_transaction_handler_test.cc",
    "loader_test.cc",
    "type_utils_test.cc",
  ]
  deps = [
    "//zircon/public/lib/zx",
    "//zircon/public/lib/zxtest",
    "//zircon/system/ulib/block-client",
    "//zircon/system/ulib/block-client:fake-device",
    "//zircon/system/ulib/disk_inspector",
    "//zircon/system/ulib/fs/test_support",
    "//zircon/system/ulib/storage/buffer",
    "//zircon/system/ulib/storage/operation",
  ]
  include_dirs = [ "//zircon/system/ulib/disk_inspector" ]

  # TODO(fxb/50567): Fix the leaks and remove this.
  deps += [ "//build/config/sanitizers:suppress-lsan.DO-NOT-USE-THIS" ]
}
