zx_library("counters") {
  sdk = "source"
  sdk_headers = [
    "lib/counters.h",
    "lib/counters-vmo-abi.h",
  ]
  visibility = [
    "$zx/kernel/*",
    "$zx/system/uapp/kcounter/*",
    "$zx/system/ulib/*",
    "$zx/system/ulib/kcounter/*",
    "$zx/system/utest/kcounter/*",
  ]
  kernel = true
  static = true
  sources = []
  if (is_kernel) {
    sources += [ "counters.cc" ]
    deps = [
      "$zx/kernel/lib/init",
      "$zx/kernel/lib/special-sections",
    ]
    public_deps = [
      # <lib/counters.h> has #include <lib/special-sections/special-sections.h>.
      "$zx/kernel/lib/special-sections:headers",
    ]
  }
}
